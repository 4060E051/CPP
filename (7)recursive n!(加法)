
===========================================================================
int sum（int n）
{
    int i, sum=0;
    if(n<=0) return 0;
    for(i=0; i<=n; ++i) {
       sum+= (i&1) ? i : -i;
    }
    return sum;
}

int sumr(int n)
{
    // return (n<=0)?0:(sumr(n-1) + ((n&1) ? n : -n));
    if(n<=0) return 0;
    return sum(n-1) + (n&1 ? n : -n);
}
