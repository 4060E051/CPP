c++
==============================================================

#include <iostream>
using namespace std;
int main(void)

{ 
int i, j; for(i = 1; i <= 9; i += 3){ 
for(j = 1; j <= 9; j++){ 

cout << i << " * " << j << " = " << i*j <<'\t' 
<< i+1 <<" * " << j << " = " << (i+1)*j << '\t' 
<< i+2 <<" * " << j << " = " << (i+2)*j << endl; 
} 
cout <<endl; 
} 

system("pause"); 
return 0; 
}
